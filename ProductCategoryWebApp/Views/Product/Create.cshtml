@model ProductCategory.Business.Models.Product

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="container-notifications">
    @Html.ErrorNotification()
</div>

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-heading"><span class="glyphicon glyphicon-plus" aria-hidden="true" style="margin-right: 4px;"></span>Product</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.Label("Category", new { @class = "col-lg-3 control-label" })

                        <div class="col-lg-9">
                            @Html.DropDownListFor(m => m.CategoryId, ViewBag.CategorySelectList as SelectList, "-- Select Category --", new { @class = "form-control", @id = "categoryname", @placeholder = "Category Name" })
                            @Html.ValidationMessageFor(m => m.CategoryId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Name", new { @class = "col-lg-3 control-label" })

                        <div class="col-lg-9">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "name", @placeholder = "Name" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-6 col-lg-offset-2">
                    <button id="save" type="submit" class="btn btn-primary">Create New Product</button>
                    <button type="reset" class="btn btn-default">Reset Fields</button>
                </div>
            </div>
        </div>
    </div>
}