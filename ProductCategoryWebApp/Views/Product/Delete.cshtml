@model ProductCategory.Business.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Product</h2>

@using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-heading"><span class="glyphicon glyphicon-minus-sign" aria-hidden="true" style="margin-right: 4px;"></span>Confirm Deletion</div>
        <div class="panel-body">
            <legend>Are you sure you want to delete the product?</legend>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-lg-2 control-label" })

                    <div class="col-lg-10">
                        <label class="control-label"><strong>@Model.Name</strong></label>
                        @Html.HiddenFor(m => m.Name)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Confirm</button>
                        @Html.ActionLink("Cancel", "Index", "Product", new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}
