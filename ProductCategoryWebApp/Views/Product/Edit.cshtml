@model ProductCategory.Business.Models.Product

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-heading"><span class="glyphicon glyphicon-pencil" aria-hidden="true" style="margin-right: 4px;"></span>Product</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.Label("Category", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            @Html.DisplayFor(m => m.Category.Name, new { @class = "form-control", @name = "Category Name" })
                            @Html.HiddenFor(m => m.Category.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Name" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <button type="reset" class="btn btn-default">Reset Fields</button>
                <a href="@Url.Action("Index")" class="btn btn-success">
                    <i class='icon icon-backward'
                       style='margin-right: 8px;'></i><span style='margin-right: 4px;'>Back</span>
                </a>
            </div>
        </div>
    </div>

}
